    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Port 9000 to Chrome",
            "port": 9222,
            "url": "http://localhost:9000",
            // webRoot to the directory that files are served from
            // webRoot is used to resolve urls (like "http://localhost/app.js") to a file on disk (like "/Users/me/project/app.js")
            "webRoot": "${workspaceRoot}/src"
        }
    ]
}